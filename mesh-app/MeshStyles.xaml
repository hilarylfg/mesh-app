<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Цвета МЭШ -->
    <SolidColorBrush x:Key="MeshBlue" Color="#2F80ED"/>
    <SolidColorBrush x:Key="MeshGreen" Color="#27AE60"/>
    <SolidColorBrush x:Key="MeshRed"   Color="#EB5757"/>
    <SolidColorBrush x:Key="MeshGray"  Color="#F4F7FB"/>
    <SolidColorBrush x:Key="MeshDark"  Color="#1A2331"/>
    <!-- Кнопка -->
    <Style TargetType="Button" x:Key="MeshMainButton">
        <Setter Property="Background" Value="{StaticResource MeshBlue}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="Margin" Value="10 0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderBrush" Value="{StaticResource MeshBlue}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Текстовое поле -->
    <Style TargetType="TextBox" x:Key="MeshTextBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderBrush" Value="#2F80ED"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <!-- Комбо-бокс -->
    <Style TargetType="ComboBox" x:Key="MeshComboBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderBrush" Value="#2F80ED"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <!-- Таблица -->
    <Style TargetType="DataGrid" x:Key="MeshDataGrid">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="RowBackground" Value="#F5F9FF"/>
        <Setter Property="AlternatingRowBackground" Value="#E6F2FF"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="BorderBrush" Value="#2F80ED"/>
        <Setter Property="BorderThickness" Value="1.5"/>
    </Style>
    <!-- TabItem -->
    <Style TargetType="TabItem">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="16 8"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
        <Setter Property="Foreground" Value="#1A2331"/>
        <Setter Property="Background" Value="#F4F7FB"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
</ResourceDictionary>